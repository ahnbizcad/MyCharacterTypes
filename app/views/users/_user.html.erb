<li>
		<ul class="list-item">
			<%# will_paginate requires the varaible name to match collection name. user @and users %>
			<li><%= gravatar_for user, size: 50 %></li>
			<li><%= user.id %></li>
			<li><%= link_to user.username, user %></li>
			<li><%= user.email %></li>
			<li><%= user.password %></li>
					<%# change to admin only %>
			<li><%= link_to 'show', user %></li>
			<li><%= link_to 'edit', edit_user_path(user) %></li>
			<li>
			<% if current_user.admin? && !current_user?(user) %>
			<%= link_to 'destroy', user_path(user),
																 method: :delete, 
																 data: { confirm: 'Are you sure?' } %>
			<% end %>
			</li>
		</ul>
	</li>