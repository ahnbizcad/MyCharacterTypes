<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>

<%= render 'shared/error_messages' %>

<%= gravatar_for @user %>
<a href="http://gravatar.com/emails">change</a>

<%#= form_for @post, as: :post, url: posts_path, html: { class: "new_post", id: "new_post" } do |f| %>
<div class="form"> 
<%= form_for @user do |u| %>
	<p>
		<%= u.label :username %>:
		<%= u.text_field :username %>
	</p>
	<p>
		<%= u.label :email %>:
		<%= u.text_field :email %>
	</p>
	<p>
		<%= u.label :password %>:
		<%= u.password_field :password %>
	</p>
	<p>
		<%= u.label :password_confirmation, "Confirm Password" %>:
		<%= u.password_field :password_confirmation %>
	</p>
	<p>		
		<%# behavior is it goes back once. make it go back to previous link that is not the same page? %>
		<%= link_to "Back", :back %>
		<%= u.submit 'Save Changes', class: "btn" %>
	</p>
<%end%>



</div>
